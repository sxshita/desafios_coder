html 
    include includes/head.pug
    body 
        h1(class='h1 text-center' style='margin-top: 80px;') Tabla Productos 

        if products[0].title
            table(class="table table-striped table-bordered table-hover" style="width: 40%; margin: auto; text-align: center;")
                thead(class="thead-dark")
                    tr
                    th(scope="col") #
                    th(scope="col") Producto
                    th(scope="col") Precio
                    th(scope="col") Imagen
                tbody
                    each prod in products
                        tr
                            th(scope="row")= prod.id
                            td= prod.title
                            td= prod.price
                            td
                                img(style="width: 50px; height:50px" src=prod.thumbnail alt=prod.title)
        else
            h1(style="text-align: center;") No hay productos

        a(type="button" class="btn btn-outline-primary" href="/" role="button" style="width: 150px; margin-left: 525px; margin-top: 10px;") Cargar Producto
    